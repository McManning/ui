{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    "rootDir": "src",
    "baseUrl": ".",
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.{ts,tsx}",
    "src/**/*.stories.{mdx,tsx}"
  ]
}