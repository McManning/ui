{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      // Note: Only use these paths for Storybook stories.
      // Compilation of the main library will break otherwise.
      // "@osuresearch/ui": [".src/index.ts"],
      "@sb/*": ["./.storybook/*"],
    },
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.{ts,tsx}",
    "src/**/*.stories.{mdx,tsx}"
  ]
}