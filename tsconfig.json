{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    // Path aliases
    // "paths": {
    //   "@utils": ["./src/utils"],
    //   "@components": ["./src/components"]
    // }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.{ts,tsx}",
    // "src/**/*.stories.{mdx,tsx}"
  ]
}